@{
    var logged_in = Accessor.HttpContext.Session.GetString("logged_in");

    string URL = Accessor.HttpContext.Request.Path;
    bool isLoginPage = URL == "/Employees/Login";
    bool isRegisterPage = URL == "/Employees/Register";

    if (logged_in == "true")
    {
        if (isRegisterPage || isLoginPage)
        {
            Context.Response.Redirect("/Employees/Index");
        }
    }

    if (logged_in != "true")
    {
        if (!isRegisterPage && !isLoginPage)
        {
            Context.Response.Redirect("/Employees/Login");
        }
    }
}