@using CargoHubWeb.Data
@model CargoHubWeb.Models.Employee

@{
    ViewData["Title"] = "Details";
    Encrypt enc = new Encrypt();
}

<div style="height: 2vh;">@*Spacer*@</div>
<div id="div_Details">
    <h1>Details: @Model.Name</h1>
    <div style="width: 100%; text-align: left;">
        <a id="btn_Back" class="btn btn-primary" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> &nbsp; Back
        </a>
    </div>
    <table id="table_Head">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    Registered
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
    <table id="table_Body">
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelModel => Model.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelModel => Model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelModel => Model.Role)
                </td>
                <td style="font-weight: bold;">
                    @if (Model.Password != enc.EncryptString("???"))
                    {
                        <span style="color: #7289DA;">YES</span>
                    }
                    else
                    {
                        <span style="color: #DB133C;">NO</span>
                    }
                </td>
                <td style="text-align: center">
                    <a asp-action="Edit" asp-route-id="@Model.Number" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit
                    </a>
                    <a asp-action="Edit" class="btn btn-warning">
                        <i class="bi bi-arrow-repeat"></i> &nbsp; Password
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    #nav_Employees {
        color: #fff;
        background-color: #7289DA;
    }

    #div_Details {
        width: 75% !important;
        height: 100%;
        margin: auto;
    }

        #div_Details #btn_Back {
            vertical-align: top !important;
            float: left;
            margin: 1%;
            padding: 1% !important;
            font-weight: bold;
        }

    #table_Head {
        width: 100%;
        border-radius: 15px 15px 0px 0px;
        overflow: hidden;
    }

        #table_Head th {
            width: 20% !important;
            color: #fff;
            background-color: #7289DA;
            padding: 1%;
        }

    #table_Body {
        width: 100%;
        border-radius: 0px 0px 15px 15px;
        overflow: hidden;
    }

        #table_Body td {
            width: 20% !important;
            padding: 1%;
        }

        #table_Body tr:nth-child(even) {
            background-color: #282B30;
        }

        #table_Body tr:nth-child(odd) {
            background-color: #36393E;
        }
</style>