@model IEnumerable<CargoHubWeb.Models.Employee>
@using CargoHubWeb.Data;

@{
    ViewData["Title"] = "Index";
    Encrypt enc = new Encrypt();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Registered
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 15%;">
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td style="width: 15%;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width: 15%;">
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td style="width: 15%;">
                    @if (item.Password != enc.EncryptString("???"))
                    {
                        <p class="text-primary">YES</p>
                    }
                    else
                    {
                        <p class="text-danger">NO</p>
                    }
                </td>
                <td class="text-center" style="width: 40%;">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Number">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit
                    </a> &nbsp;
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Number">
                        <i class="bi bi-info-circle"></i> &nbsp; Details
                    </a> &nbsp;
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Number">
                        <i class="bi bi-trash-fill"></i> &nbsp; Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
